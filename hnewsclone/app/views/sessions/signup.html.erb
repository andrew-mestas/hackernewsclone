<h1>Sign Up<%= link_to "Login", login_path, class: "pull-right btn btn-primary"%></h1>
<br><hr>
<%= form_for :user, method: :post do |f| %>
 <%= f.text_field :name, placeholder: "Name"%><br>
 <%= f.text_field :email, placeholder: "Email"%><br>
 <%= f.password_field :password, placeholder: "Password"%><br><br>

 <%=f.submit 'Sign Up'%>
<% end %>